{
  "branchPrefix": "renovate/",
  "dependencyDashboard": true,
  "dependencyDashboardApproval": false,
  "dependencyDashboardAutoclose": false,
  "reviewers": [
    "team:dRAX"
  ],
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(fix)",
    ":automergeMinor"
  ],
  "helmv3": {
    "fileMatch": [
      "(^|/)Chart\\.yaml$"
    ],
    "commitMessageTopic": "update {{depName}}",
    "registryAliases": {}
  },
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "fileMatch": [
        "(^|/)Chart\\.yaml$"
      ],
      "matchStrings": [
        "#\\s?renovate: image=(?<depName>.*?)( versioning=(?<versioning>.*?))?( extract_version=(?<extractVersion>.*?))?\\s?appVersion:\\s?\"?(?<currentValue>[\\w+\\.\\-]*)\"?"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}docker{{/if}}"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "fileMatch": [
        "(^|/)External\\.yaml$"
      ],
      "matchStrings": [
        "name:\\s+\"?(?<chartName>.*?)\"?\\s+(.*\\s)?repository:\\s+\"?oci://(?<registryRef>.*?)\"?\\s+(.*\\s)?version:\\s+\"?(?<currentValue>[\\w\\.\\-]*)\"?"
      ],
      "packageNameTemplate": "{{registryRef}}/{{chartName}}"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "fileMatch": [
        "(^|/)values\\.y[a]?ml$"
      ],
      "matchStrings": [
        "#\\s?renovate:( versioning=(?<versioning>.*?))?( extract_version=(?<extractVersion>.*?))?\\s+image:\\s?\"?(?<depName>[^:]*?):(?<currentValue>[\\w+\\.\\-]*)\"?"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}docker{{/if}}"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "helm",
      "fileMatch": [
        "(^|/)values\\.y[a]?ml$"
      ],
      "matchStrings": [
        "#\\s?renovate: repository=(?<registryUrl>.*?) chart=(?<depName>.*?)\\s?[\\w\\-]*[vV]ersion:\\s?\"?(?<currentValue>[\\w\\.\\-]*)\"?"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "fileMatch": [
        "(^|/)helm-charts\\.y[a]?ml$"
      ],
      "matchStrings": [
        "#\\s?renovate: github_repository=(?<depName>.*?)( versioning=(?<versioning>.*?))?( extract_version=(?<extractVersion>.*?))?\\s*[\\w\\-]*_version:\\s?\"?(?<currentValue>[\\w+\\.\\-]*)\"?"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "fileMatch": [
        "(^|/).+\\.sh$"
      ],
      "matchStrings": [
        "#\\s?renovate: github_repository=(?<depName>.*?)( versioning=(?<versioning>.*?))?( extract_version=(?<extractVersion>.*?))?\\s*(export\\s+)?[\\w\\-]*_[vV][eE][rR][sS][iI][oO][nN]=\"?(?<currentValue>[\\w+\\.\\-]*)\"?"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "packageRules": [
    {
      "description": "Automerge external chart updates",
      "automerge": true,
      "matchFileNames": [
        "/External\\.yaml/"
      ]
    },
    {
      "description": "Use loose versioning for acc-generic-img to allow k8s suffix changes",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["accelleran/acc-generic-img"],
      "versioning": "loose"
    }
  ]
}
